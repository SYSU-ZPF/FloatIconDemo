<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_rote"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/ic_audio"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="25dp" />

    <com.zpf.floaticondemo.progressBar.RoundProgressBarWidthNumber
        android:id="@+id/audio_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_rote"
        app:layout_constraintEnd_toEndOf="@id/iv_rote"
        app:layout_constraintStart_toStartOf="@id/iv_rote"
        app:layout_constraintTop_toTopOf="@id/iv_rote"
        app:progress_reached_bar_height="1.5dp"
        app:progress_text_color="#FFB000"
        app:progress_unreached_bar_height="1.5dp"
        app:progress_unreached_color="@android:color/transparent"
        app:radius="26dp"
        app:textVisible="false" />


    <ImageView
        android:id="@+id/stylus_start"
        android:layout_width="22dp"
        android:layout_height="46dp"
        android:src="@drawable/pic_stylus_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/stylus_end"
        android:layout_width="22dp"
        android:layout_height="46dp"
        android:layout_marginStart="43dp"
        android:src="@drawable/pic_stylus_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>